# Production Environment Variables Template
# Copy to .env.production and fill in real values

# === API Keys ===
OPENAI_API_KEY=sk-prod-xxxxx
GEMINI_API_KEY=xxxxx
DEEPGRAM_API_KEY=xxxxx
CARTESIA_API_KEY=xxxxx
ELEVENLABS_API_KEY=xxxxx

# === Telnyx (HD Voice) ===
TELNYX_API_KEY=KEYxxxxx
TELNYX_CONNECTION_ID=xxxxx
TELNYX_SAMPLE_RATE=16000
NGROK_URL=https://your-domain.com  # For production, use your actual domain

# === Database ===
DATABASE_URL=postgresql://user:password@prod-db-host:5432/voice_os
DB_POOL_MIN=5
DB_POOL_MAX=20

# === Daily.co ===
DAILY_API_KEY=xxxxx
DAILY_API_URL=https://api.daily.co/v1

# === Security ===
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET=xxxxx
API_SECRET_KEY=xxxxx

# === CORS ===
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
FRONTEND_URL=https://yourdomain.com

# === Rate Limiting ===
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# === Monitoring ===
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
ENVIRONMENT=production
LOG_LEVEL=INFO
ENABLE_METRICS=true

# === Server ===
HOST=0.0.0.0
PORT=8000
WORKERS=4

# === SSL/TLS ===
SSL_CERT_PATH=/etc/ssl/certs/fullchain.pem
SSL_KEY_PATH=/etc/ssl/private/privkey.pem

# === Feature Flags ===
ENABLE_STRESS_TEST=false
ENABLE_DEBUG_ENDPOINTS=false
